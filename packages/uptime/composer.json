{
    "name": "vigilant/uptime",
    "description": "Vigilant Uptime",
    "type": "package",
    "license": "AGPL",
    "authors": [
        {
            "name": "Vincent Boon",
            "email": "info@vincentbean.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "guzzlehttp/guzzle": "^7.8",
        "laravel/framework": "^11.0",
        "livewire/livewire": "^3.4",
        "vigilant/core": "@dev",
        "vigilant/sites": "@dev",
        "vigilant/users": "@dev",
        "vigilant/frontend": "@dev",
        "vigilant/notifications": "@dev",
        "geerlingguy/ping": "^1.2"
    },
    "require-dev": {
        "laravel/pint": "^1.6",
        "larastan/larastan": "^2.5",
        "orchestra/testbench": "^9.0",
        "phpstan/phpstan-mockery": "^1.1",
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "Vigilant\\Uptime\\": "src",
            "Vigilant\\Uptime\\Database\\Factories\\": "database/factories"

        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vigilant\\Uptime\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan",
        "style": "pint --test",
        "quality": [
            "@test",
            "@analyse",
            "@style"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Vigilant\\Uptime\\ServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "path",
            "url": "../*"
        }
    ]
}
