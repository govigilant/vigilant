{
    "name": "vigilant/notifications",
    "description": "Vigilant Notifications",
    "type": "package",
    "license": "AGPL",
    "authors": [
        {
            "name": "Vincent Boon",
            "email": "info@vincentbean.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "guzzlehttp/guzzle": "^7.2",
        "laravel/framework": "^11.0",
        "livewire/livewire": "^3.4",
        "vigilant/core": "@dev",
        "vigilant/sites": "dev-main",
        "vigilant/users": "dev-main"
    },
    "require-dev": {
        "laravel/pint": "^1.6",
        "larastan/larastan": "^2.5",
        "orchestra/testbench": "^9.0",
        "phpstan/phpstan-mockery": "^1.1",
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "Vigilant\\Notifications\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vigilant\\Notifications\\Tests\\": "tests",
            "Vigilant\\Users\\Database\\Factories\\": "../users/database/factories"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan",
        "style": "pint --test",
        "quality": [
            "@test",
            "@analyse"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Vigilant\\Notifications\\ServiceProvider"
            ],
            "aliases": {
                "NotificationRegistry": "Vigilant\\Notifications\\Facades\\NotificationRegistry"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "path",
            "url": "../*"
        }
    ]
}
