{
    "name": "vigilant/sites",
    "description": "Vigilant Sites",
    "type": "package",
    "license": "AGPL",
    "authors": [
        {
            "name": "Vincent Boon",
            "email": "info@vincentbean.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "laravel/framework": "^10.0"
    },
    "require-dev": {
        "laravel/pint": "^1.6",
        "nunomaduro/larastan": "^2.5",
        "orchestra/testbench": "^8.0",
        "phpstan/phpstan-mockery": "^1.1",
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Vigilant\\Sites\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vigilant\\Sites\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan",
        "style": "pint --test",
        "quality": [
            "@test",
            "@analyse",
            "@style"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Vigilant\\Sites\\ServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true

}
